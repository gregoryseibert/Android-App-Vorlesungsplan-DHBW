<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/week_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorCardBackground">

    <RelativeLayout
        android:id="@+id/week_container_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_offset">

        <TextView
            android:id="@+id/dayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/item_offset"
            android:paddingEnd="@dimen/item_offset"
            android:paddingTop="@dimen/item_offset"
            android:text="Montag"
            android:textColor="@color/colorCardText"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="99dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@color/colorCardBackground"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn="" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/week_container_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/week_container_top"
        android:background="@color/colorCardBackgroundIndent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_offset"
            app:reverseLayout="false"></android.support.v7.widget.RecyclerView>
    </FrameLayout>

</RelativeLayout>